[MASTER]
init-hook='import sys; sys.path.append("src")'

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    too-many-arguments,
    too-many-instance-attributes,
    line-too-long

[FORMAT]
max-line-length=88
indent-string='    '

[BASIC]
good-names=i,j,k,ex,df,db,id,pk

[DESIGN]
max-attributes=10
max-args=7

[SIMILARITIES]
min-similarity-lines=10
ignore-imports=yes

[IMPORTS]
allow-wildcard-with-all=yes
